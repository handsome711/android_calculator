<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="simple caluator"
        android:textSize="30dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_result"
            android:textSize="30dp"
            android:gravity="right"
            android:layout_gravity="right" />
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout style="@style/table_col"
            android:layout_weight="3">
            <LinearLayout style="@style/table_row">
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_cancel"
                    android:onClick="click_cancer"
                    android:text="CE" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_divide"
                    android:onClick="click_operator"
                    android:text="รท" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_multiply"
                    android:onClick="click_operator"
                    android:text="ร" />
            </LinearLayout>

            <LinearLayout style="@style/table_row">
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_7"
                    android:onClick="click_num"
                    android:text="7" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_8"
                    android:onClick="click_num"
                    android:text="8" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_9"
                    android:onClick="click_num"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout style="@style/table_row">
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_4"
                    android:onClick="click_num"
                    android:text="4" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_5"
                    android:onClick="click_num"
                    android:text="5" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_6"
                    android:onClick="click_num"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout style="@style/table_row">
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_1"
                    android:onClick="click_num"
                    android:text="1" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_2"
                    android:onClick="click_num"
                    android:text="2" />
                <Button style="@style/btn_height_match"
                    android:id="@+id/btn_3"
                    android:onClick="click_num"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout style="@style/table_row">
                <Button style="@style/btn_height_match"
                    android:layout_weight="2"
                    android:id="@+id/btn_0"
                    android:onClick="click_num"
                    android:text="0" />
	            <Button style="@style/btn_height_match"
                    android:id="@+id/btn_dot"
                    android:onClick="click_dot"
                    android:text="." />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/table_col"
            android:layout_weight="1">
            <Button style="@style/btn_width_match"
                android:id="@+id/btn_clear"
                android:onClick="click_clear"
                android:text="C" />
            <Button style="@style/btn_width_match"
                android:id="@+id/btn_minus"
                android:onClick="click_operator"
                android:text="-" />
            <Button style="@style/btn_width_match"
                android:id="@+id/btn_plus"
                android:onClick="click_operator"
                android:text="+"/>

            <Button style="@style/btn_width_match"
                android:layout_weight="2"
                android:id="@+id/btn_equal"
                android:onClick="click_operator_equal"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>